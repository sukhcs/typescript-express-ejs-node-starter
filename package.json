    "concurrently": "^8.2.2",
    "ejs-lint": "^2.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "sass": "^1.77.6",
    "shelljs": "^0.8.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tslint": "^5.20.1",
    "typescript": "^5.4.5"
  }
