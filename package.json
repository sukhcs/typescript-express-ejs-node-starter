    "ejs": "^3.1.10",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/bluebird": "^3.5.42",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
